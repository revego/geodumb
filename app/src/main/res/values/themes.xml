<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema principale dell'app (Material3) -->
    <style name="Theme.StumpAnalyzer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colori primari (quelli ambra del tuo design) -->
        <item name="colorPrimary">@color/amber_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/amber_700</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <item name="colorSecondary">@color/amber_800</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Risolve il ProgressBar grigio e i TextView rossi -->
        <item name="android:colorAccent">@color/amber_600</item>
        <item name="colorError">@color/red_500</item>
        <item name="android:textColorPrimary">@color/gray_900</item>
        <item name="android:textColorSecondary">@color/gray_700</item>

        <!-- Sfondo gradiente -->
        <item name="android:windowBackground">@drawable/gradient_background</item>
    </style>

</resources>